<div id="location-details">
	<ul>
		<% tidy_up(@location.attributes).each do |label, name| %>
			<li><%= label %>: <%= name %></li>
		<% end %>
	</ul>
</div>
<div id="map">
	<%= map(center: {
						latlng: [@location[:decimal_latitude], @location[:decimal_longitude]],
						zoom: 16 },
					markers: [
						{ latlng: [@location[:decimal_latitude], @location[:decimal_longitude]] }
					]) %>
</div>