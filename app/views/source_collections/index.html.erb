<h1>Collections</h1>
<table>
	<thead>
		<tr>
			<th>Institution</th>
			<th>Code</th>
			<th>Collection</th>
		 	<th>Code</th>
		 	<th>Records</th>
		</tr>
	</thead>
	<tbody>
		<% if @collections.size == 0 %>
			<tr>
				<td colspan="5">No records uploaded</td>
			</tr>
		<% else %>
			<% @collections.each do |coll| %>
				<tr>
					<td><%= coll.dwc_institution_name %></td>
					<td><%= coll.dwc_institution_code %></td>
					<td><%= link_to coll.dwc_collection_id, coll %></td>
					<td><%= coll.dwc_collection_code %></td>
					<td><%= coll.collection_objects.size %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>