<div class="detail-layout">
  <h2>
		<%= link_to @collection_object.source_collection
																		.collection_id,
						@collection_object.source_collection
			%> (<%= @collection_object.source_collection.collection_code %>)
	</h2>
	<h1><%= @collection_object.catalog_number %></h1>
	<div id="other_catalog_numbers">
	  <%= render partial: 'other_catalog_number', collection: @collection_object.other_catalog_numbers %>
	</div>
	
	<div class="detail-layout__main">
		<table>
			<tbody>
				<% tidy_up(@collection_object.attributes).each do |field| %>
					<tr>
						<td><%= field.first.humanize %></td>
						<td><%= field.last %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<% if @collection_object[:decimal_latitude] && @collection_object[:decimal_longitude] %>
	    <div id="map">
		    <%= map(center: {
							latlng: [@collection_object[:decimal_latitude], @collection_object[:decimal_longitude]],
							zoom: 12 },
						markers: [
							{ latlng: [@collection_object[:decimal_latitude], @collection_object[:decimal_longitude]] }
						]) %>
	    </div>
    <% end %>
		<%= render partial: 'record_metadata' %>
	</div>
</div>
