<div class="detail-layout">
  <h2>
		<%= link_to @collection_object.source_collection
																		.collection_id,
						@collection_object.source_collection
			%> (<%= @collection_object.source_collection.collection_code %>)
	</h2>
	<h1><%= @collection_object.catalog_number %></h1>
	<div id="other_catalog_numbers">
	  <%= render partial: 'other_catalog_number', collection: @collection_object.other_catalog_numbers %>
	</div>
	
	<div class="detail-layout__main">
		<table>
			<tbody>
				<% tidy_up(@collection_object.attributes).each do |field| %>
					<tr>
						<td><%= field.first.humanize %></td>
						<td><%= field.last %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		
		<div id="taxon">
		  <%= render partial: 'dwc_taxon', locals: { dwc_taxon: @collection_object.dwc_taxon } %>
		</div>
		
		<div id="identification">
		  <%= render partial: 'dwc_identification', locals: { dwc_identification: @collection_object.dwc_identification } %>
    </div>
    
		<div id="location">
		  <%= render partial: 'dwc_location', locals: { dwc_location: @collection_object.dwc_location } %>
		</div>

    <div id="event">
		  <%= render partial: 'dwc_event', locals: { dwc_event: @collection_object.dwc_event } %>
		</div>
		
		<%= render partial: 'record_metadata' %>
	</div>
</div>
